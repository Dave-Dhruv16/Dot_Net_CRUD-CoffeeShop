@model DataTable
@using System.Data
<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Users</h5>
                        <a asp-controller="User" asp-action="AddUserForm">
                            <button type="submit" class="btn btn-primary mb-3">Add User</button>
                        </a>
                        <!-- Table with stripped rows -->
                        <div style="overflow-x: auto;">
                            @if (Model == null)
                            {
                                <p>No data available</p>
                            }
                            else
                            {
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th>UserID</th>
                                            <th>UserName</th>
                                            <th>Email</th>
                                            <th>Password</th>
                                            <th>MobileNo</th>
                                            <th>Address</th>
                                            <th>IsActive</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Model.Rows)
                                        {
                                            <tr>
                                               

                                                <td>@row["UserID"]</td>
                                                <td>@row["UserName"]</td>
                                                <td>@row["Email"]</td>
                                                <td>@row["Password"]</td>
                                                <td>@row["MobileNo"]</td>
                                                <td>@row["Address"]</td>
                                                

                                                <td class="d-flex justify-content-start">
                                                    <button type="button" class="btn btn-warning me-2">✎</button>
                                                    <a asp-controller="User" asp-action="UserDelete" asp-route-UserID="@row["UserID"]">
                                                        <button class="btn btn-danger">🗑</button>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
