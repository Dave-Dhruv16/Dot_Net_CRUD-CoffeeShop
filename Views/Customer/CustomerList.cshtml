@model DataTable
@using System.Data

<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Customers</h5>
                        <a asp-controller="Customer" asp-action="AddCustomerForm">
                            <button type="submit" class="btn btn-primary mb-3">Add Customer</button>
                        </a>
                        <!-- Table with stripped rows -->
                        <div style="overflow-x: auto;">
                            @if (Model == null)
                            {
                                <p>No data available</p>
                            }
                            else
                            {
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th>CustomerID</th>
                                            <th>CustomerName</th>
                                            <th>HomeAddress</th>
                                            <th>Email</th>
                                            <th>MobileNo</th>
                                            <th>GSTNO</th>
                                            <th>CityName</th>
                                            <th>PinCode</th>
                                            <th>NetAmount</th>
                                            <th>UserID</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Model.Rows)
                                        {
                                            <tr>
                                                
                                                <td>@row["CustomerID"]</td>
                                                <td>@row["CustomerName"]</td>
                                                <td>@row["HomeAddress"]</td>
                                                <td>@row["Email"]</td>
                                                <td>@row["MobileNo"]</td>
                                                <td>@row["GST_NO"]</td>
                                                <td>@row["CityName"]</td>
                                                <td>@row["PinCode"]</td>
                                                <td>@row["NetAmount"]</td>
                                                <td>@row["UserID"]</td>

                                                <td class="d-flex justify-content-start">
                                                    <button type="button" class="btn btn-warning me-2">✎</button>
                                                    <a asp-controller="Customer" asp-action="CustomerDelete" asp-route-CustomerID="@row["CustomerID"]">
                                                        <button class="btn btn-danger">🗑</button>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
