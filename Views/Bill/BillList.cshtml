@model DataTable
@using System.Data

<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Bills</h5>
                        <a asp-controller="Bill" asp-action="AddBillForm">
                            <button type="submit" class="btn btn-primary mb-3">Add Bill</button>
                        </a>
                        <!-- Table with stripped rows -->
                        <div style="overflow-x: auto;">
                            @if (Model == null)
                            {
                                <p>No data available</p>
                            }
                            else
                            {
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th>BillID</th>
                                            <th>BillNumber</th>
                                            <th>BillDate</th>
                                            <th>OrderID</th>
                                            <th>TotalAmount</th>
                                            <th>Discount</th>
                                            <th>NetAmount</th>
                                            <th>UserID</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Model.Rows)
                                        {
                                            <tr>
                                               

                                                <td>@row["BillID"]</td>
                                                <td>@row["BillNumber"]</td>
                                                <td>@row["BillDate"]</td>
                                                <td>@row["OrderID"]</td>
                                                <td>@row["TotalAmount"]</td>
                                                <td>@row["Discount"]</td>
                                                <td>@row["NetAmount"]</td>
                                                <td>@row["UserID"]</td>


                                                <td class="d-flex justify-content-start">
                                                    <button type="button" class="btn btn-warning me-2">✎</button>
                                                    <a asp-controller="Bill" asp-action="BillDelete" asp-route-BillID="@row["BillID"]">
                                                        <button class="btn btn-danger">🗑</button>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
